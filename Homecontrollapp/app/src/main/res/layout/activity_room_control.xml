<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck1"
    android:padding="16dp">

    <TextView
        android:id="@+id/roomNameTextView"
        android:layout_width="300dp"
        android:layout_height="91dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="32dp"
        android:text="H o u s e"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="364dp"
        android:layout_height="89dp"
        android:layout_below="@id/roomNameTextView"
        android:layout_marginTop="16dp"
        android:text="Temperature: "
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/humidityTextView"
        android:layout_width="369dp"
        android:layout_height="81dp"
        android:layout_below="@id/temperatureTextView"
        android:layout_marginTop="26dp"
        android:text="Humidity: "
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <Switch
        android:id="@+id/lightSwitch"
        android:layout_width="240dp"
        android:layout_height="81dp"
        android:layout_below="@id/humidityTextView"
        android:layout_marginTop="46dp"
        android:text="Lights"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <Button
        android:id="@+id/roomsButton"
        android:layout_width="238dp"
        android:layout_height="77dp"
        android:layout_below="@id/lightSwitch"
        android:layout_marginTop="43dp"
        android:text="Rooms"
        android:textSize="24sp" />

</RelativeLayout>
